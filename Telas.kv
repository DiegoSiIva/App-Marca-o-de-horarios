            right_action_items: [["account-circle-outline", lambda x: app.callback(x)]]
            elevation: .5
        MDFloatLayout:
            id: float_layout

        MDBoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.8
            size_hint_y: .2
            pos_hint: {"center_x": 0.5}
            padding: "24dp"
            spacing: "24dp"
            MDRaisedButton:
                text: 'Desmarcar'
                on_release: root.on_button_press1()
                font_name: "Poppins-Medium.ttf"
                pos_hint: {'center_x': .5, 'center_y': .375}
                size_hint_x: 0.7
                size_hint_y: .08
                elevation: 0
                md_bg_color: 0.858, 0.180, 0.102, 1
                text_color: 1, 1, 1, 1

        Widget:
            size_hint_y: .2
<Laboratorios>:
