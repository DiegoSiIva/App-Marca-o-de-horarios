        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {"center_x": 0.5}
            padding: dp(35)
            MDRelativeLayout:
                size_hint_y: None
                height: escolha.height
                size_hint_x: None
                width: "300dp"
                pos_hint: {"center_x": .5, "center_y": .5}
                MDTextField:
                    id: escolha
                    size_hint_x: None
                    readonly: True
                    width: "200dp"
                    hint_text: "Laboratório"
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text_color_normal: "black"
                    text_color_focus: "black"
                    line_color_normal: "black"
                    line_color_focus: "black"
                    hint_text_color_normal: "black"
                    hint_text_color_focus: "black"
                    icon_left_color_normal: "black"
                    icon_left_color_focus: "black"
                    font_name: "Poppins-Medium.ttf"
                    font_name_hint_text: "Poppins-Medium.ttf"
                MDIconButton:
                    icon: "chevron-down"
                    icon_color: "black"
                    theme_icon_color: "Custom"
